{
    "name": "cloud-castle/di-container",
    "description": "Dependency Injection container library",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "dependency-injection",
        "di",
        "container",
        "ioc"
    ],
    "authors": [
        {
            "name": "Zorin Alexey",
            "email": "zorinalexey59292@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "squizlabs/php_codesniffer": "^3.8",
        "friendsofphp/php-cs-fixer": "^3.48",
        "phpmd/phpmd": "^2.15",
        "phpmetrics/phpmetrics": "^2.8",
        "phpbench/phpbench": "^1.2",
        "rector/rector": "^1.0",
        "symfony/var-dumper": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "CloudCastle\\DI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CloudCastle\\DI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage --coverage-text",
        "analyse": [
            "@phpstan",
            "@phpcs"
        ],
        "phpstan": "phpstan analyse src tests --level=max",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpcs:fix": "phpcbf src tests --standard=PSR12",
        "php-cs-fixer": "php-cs-fixer fix --dry-run --diff",
        "php-cs-fixer:fix": "php-cs-fixer fix",
        "phpmd": "phpmd src,tests text cleancode,codesize,controversial,design,naming,unusedcode",
        "metrics": "phpmetrics --report-html=build/metrics src",
        "benchmark": "phpbench run --report=default",
        "load-test": "php tests/LoadTest.php",
        "stress-test": "php tests/StressTest.php",
        "compile": "php scripts/compile-container.php",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process",
        "check": [
            "@analyse",
            "@test",
            "@phpmd"
        ],
        "fix": [
            "@phpcs:fix",
            "@php-cs-fixer:fix",
            "@rector:fix"
        ],
        "post-install-cmd": [
            "@compile"
        ],
        "post-update-cmd": [
            "@compile"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
